<?xml version="1.0" encoding="utf-8"?>
<dong.lan.library.RelativeCarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    app:rcv_backgroundColor="@color/avoscloud_feedback_white"
    app:rcv_elevation="6dp"
    app:rcv_elevationColor="@color/cardview_shadow_end_color"
    app:rcv_marginX="12dp"
    app:rcv_marginY="12dp"
    app:rcv_radius="2dp">


    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/item_suggest_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="洗车指数"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/item_suggest_type"
        android:gravity="center_horizontal"
        android:id="@+id/item_suggest_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不宜"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@id/item_suggest_level"
        android:gravity="center_horizontal"
        android:id="@+id/item_suggest_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不宜洗车，未来24小时内有雨，如果在此期间洗车，雨水和路上的泥水可能会再次弄脏您的爱车。"
        android:textSize="20sp" />


</dong.lan.library.RelativeCarView>