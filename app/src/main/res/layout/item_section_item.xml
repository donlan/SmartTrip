<?xml version="1.0" encoding="utf-8"?>
<dong.lan.library.RelativeCarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_section_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    app:rcv_elevation="6dp"
    app:rcv_elevationColor="@color/background_gray3"
    app:rcv_marginX="10dp"
    app:rcv_marginY="10dp"
    app:rcv_radius="2dp">


    <TextView
        android:id="@+id/item_section_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/main_text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_section_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_section_text"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_gray1"
        android:textSize="16sp" />


</dong.lan.library.RelativeCarView>