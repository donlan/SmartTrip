<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/demo_image1"
        android:id="@+id/item_travels_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        android:minHeight="200dp"
        android:scaleType="centerCrop" />


    <dong.lan.smarttrip.ui.customview.LabelTextView
        android:id="@+id/item_travels_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="marquee"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/travel_item_text_color"
        android:textSize="14sp"
        app:bg_color="@color/white"
        app:radius="10dp"
        app:strokeWidth="1dp" />

    <dong.lan.smarttrip.ui.customview.LabelTextView
        android:layout_marginTop="8dp"
        android:id="@+id/item_travels_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:ellipsize="marquee"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/file_not_found"
        android:textColor="@color/travel_item_text_color"
        android:textSize="16sp"
        app:bg_color="@color/white"
        app:radius="14dp"
        app:strokeWidth="1dp" />

    <dong.lan.smarttrip.ui.customview.LabelTextView
        android:id="@+id/item_travels_msg_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/white"
        app:bg_color="@color/white"
        app:radius="100dp"
        app:strokeWidth="1dp" />


</RelativeLayout>