<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp">

    <TextView
        android:id="@+id/item_user_handle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="成×飞"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/default_main_text_size" />

    <TextView
        android:id="@+id/item_user_handle_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/set_remark"
        android:textColor="@color/desc_text_color"
        android:textSize="@dimen/default_main_text_size" />

    <ImageButton
        android:id="@+id/item_user_handle_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@drawable/call" />

    <ImageButton
        android:id="@+id/item_user_handle_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:src="@drawable/chat_msg" />
</LinearLayout>