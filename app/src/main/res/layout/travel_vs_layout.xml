<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_collapseMode="parallax"
    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#fff"
    android:orientation="vertical">
    <TextView
        android:drawableLeft="@drawable/luggage"
        android:textStyle="bold"
        android:drawablePadding="12dp"
        android:text="Beijing 三日游"
        android:id="@+id/traveling_tittle_tv"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/info"
        android:text="当前是旅行的第二天，所处旅行点 天安门广场"
        android:layout_marginTop="8dp"
        android:id="@+id/traveling_progress_tv"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_vertical"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/gps"
        android:layout_marginTop="10dp"
        android:text="总共50人，当前所在地点是北京天安门"
        android:id="@+id/traveling_info_tv"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>