<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:id="@+id/item_doc_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_doc_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_file"
            android:id="@+id/item_doc_img"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/item_doc_desc"
            android:text="酒店安排.doc"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/item_doc_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/btn_red"
        android:padding="20dp"
        android:src="@drawable/delete_bin" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>