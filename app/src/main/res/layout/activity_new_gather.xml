<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray1"
        android:padding="12dp"
        android:text="@string/using_gather"
        android:textSize="18sp" />

    <dong.lan.smarttrip.ui.customview.TagCloudView
        android:id="@+id/new_gather_tag_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray1"
        android:padding="12dp"
        android:text="@string/new_gather"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gather_location"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />


        <EditText
            android:id="@+id/new_gather_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/pick_gather_location"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_text_size" />

        <ImageButton
            android:id="@+id/new_gather_pick_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/location" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gather_time"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />


        <TextView
            android:id="@+id/new_gather_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/clock"
            android:gravity="center_vertical"
            android:hint="@string/pick_gather_time_hint"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_gather_content"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />


        <EditText
            android:id="@+id/new_gather_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/new_gather_content_hint"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />


</LinearLayout>