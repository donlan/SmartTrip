<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="12dp">

        <android.support.v4.widget.CircleImageView
            android:id="@+id/item_team_user_avatar"
            android:layout_width="@dimen/list_avatar_size"
            android:layout_height="@dimen/list_avatar_size"
            android:src="@drawable/head3" />

        <TextView
            android:id="@+id/item_user_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="方式的"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/item_team_user_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/btn_red"
        android:padding="20dp"
        android:src="@drawable/delete_bin" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>