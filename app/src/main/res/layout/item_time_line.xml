<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_time_line_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="10."
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_time_line_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/item_time_line_month"
        android:text="23"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/item_time_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@id/item_time_line_day"
        android:background="@color/colorPrimary" />

    <dong.lan.smarttrip.ui.customview.LabelTextView
        android:id="@+id/item_time_line_dot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/item_time_line_day"
        app:bg_color="@color/colorPrimary"
        app:radius="15dp" />

    <TextView
        android:id="@+id/item_time_line_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/item_time_line_dot"
        android:text="12:34 -> 14:40"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_time_line_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_time_line_time_info"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_time_line_dot"
        android:text="12:34 -> 14:40"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/item_time_line_tran"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:scaleType="center" />


</RelativeLayout>