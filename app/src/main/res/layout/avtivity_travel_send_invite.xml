<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/travel_share_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="马尔代夫七日游"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />

        <TextView
            android:id="@+id/travel_share_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="2017.2.12 7天"
            android:textColor="@color/desc_text_color"
            android:textSize="@dimen/desc_text_size" />

        <ImageView
            android:id="@+id/travel_share_qrcode"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/qrcode" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="扫一扫二维码，即可加入"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/default_main_text_size" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分享旅行二维码，邀请游客加入"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/default_main_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/travel_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/qq_icon"
            android:gravity="center"
            android:text="QQ" />

        <TextView
            android:id="@+id/travel_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/weixin_icon"
            android:gravity="center"
            android:text="微信" />


        <TextView
            android:id="@+id/travel_share_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/sms_icon"
            android:gravity="center"
            android:text="短信" />


    </LinearLayout>

</LinearLayout>