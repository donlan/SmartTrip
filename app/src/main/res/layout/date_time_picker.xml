<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/dateTimeCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/action_bar_height"
            android:layout_marginRight="@dimen/action_bar_height"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="20sp">

            <RadioButton
                android:id="@+id/dateCheck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/tap_check_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/date"
                android:textColor="@drawable/check_text_color" />

            <RadioButton
                android:id="@+id/timeCheck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/tap_check_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@drawable/check_text_color" />

        </RadioGroup>

        <TextView
            android:id="@+id/right"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:headerBackground="@color/colorPrimary" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:headerBackground="@color/colorPrimary" />
    </ViewFlipper>
</LinearLayout>