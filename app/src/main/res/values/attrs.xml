<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CircleImageButton">
        <attr name="cib_bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="LabelTextView">
        <attr name="bg_color" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="clickAnimation" format="boolean" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="shadowColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>


    <!-- 条形控制控件自定义属性 -->
    <declare-styleable name="LineControllerView">
        <!-- 名称 -->
        <attr name="name" format="string" />
        <!-- 内容或当前状态 -->
        <attr name="content" format="string" />
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean" />
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean" />
        <!-- 是否是开关 -->
        <attr name="isSwitch" format="boolean" />
    </declare-styleable>
</resources>